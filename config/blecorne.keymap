#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

// Helper macro to create an Autoshift version of a key
#define AS(keycode) &as LS(keycode) keycode

/ {
    chosen {
        zmk,physical-layout = &foostan_corne_6col_layout;
    };

    behaviors {
        // Home row mods configuration
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <200>;
            require-prior-idle-ms = <125>;
            flavor = "balanced";
            bindings = <&kp>, <&kp>;
        };

        // Auto-shift behavior: tap = normal, hold = shifted
        as: auto_shift {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <200>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };

    macros {
        exit_as_space: exit_autoshift_space {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&to 0 &kp SPACE>;
        };
    };

    combos {
        compatible = "zmk,combos";
        
        // Combo: E + R = TAB
        combo_tab {
            timeout-ms = <50>;
            key-positions = <3 4>;
            bindings = <&kp TAB>;
        };
        
        // Combo: U + I = ESC
        combo_esc {
            timeout-ms = <50>;
            key-positions = <7 8>;
            bindings = <&kp ESC>;
        };
        
        // Combo: F + J (home row shifts) = Toggle Auto-shift Layer
        // Activates auto-shift, stays on until you press a non-letter key
        combo_autoshift {
            timeout-ms = <50>;
            key-positions = <16 19>;
            bindings = <&tog 3>;
        };
        
        // Combo: Both physical shifts (corners) = CAPS_WORD
        combo_caps {
            timeout-ms = <50>;
            key-positions = <24 35>;
            bindings = <&caps_word>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        // ----------------------------------------------------------------
        // Layer 0: BASE (QWERTY with Home Row Mods - NO auto-shift)
        // ----------------------------------------------------------------
        default_layer {
            bindings = <
// ┌─────────┬─────────┬─────────┬─────────┬─────────┬─────────┐      ┌─────────┬─────────┬─────────┬─────────┬─────────┬─────────┐
    &kp TAB   &kp Q     &kp W     &kp E     &kp R     &kp T              &kp Y     &kp U     &kp I     &kp O     &kp P     &kp BSPC
// ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤      ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤
    &kp ESC   &hm LGUI A &hm LALT S &hm LCTRL D &hm LSHFT F &kp G        &kp H     &hm RSHFT J &hm RCTRL K &hm RALT L &hm RGUI SEMI &kp SQT
// ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤      ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤
    &kp LSHFT &kp Z     &kp X     &kp C     &kp V     &kp B              &kp N     &kp M     &kp COMMA &kp DOT   &kp FSLH  &kp RSHFT
// └─────────┴─────────┴─────────┼─────────┼─────────┼─────────┤      ├─────────┼─────────┼─────────┼─────────┴─────────┴─────────┘
                                  &kp LGUI  &mo 1     &kp SPACE          &kp RET   &mo 2     &kp RALT
//                               └─────────┴─────────┴─────────┘      └─────────┴─────────┴─────────┘
            >;
        };

        // ----------------------------------------------------------------
        // Layer 1: LOWER (Numbers + Navigation)
        // ----------------------------------------------------------------
        lower_layer {
            bindings = <
// ┌─────────┬─────────┬─────────┬─────────┬─────────┬─────────┐      ┌─────────┬─────────┬─────────┬─────────┬─────────┬─────────┐
    &kp C_BRI_DN &kp C_BRI_UP  &kp C_VOL_DN &kp C_VOL_UP  &kp C_MUTE    &kp C_PREV &kp C_PP  &kp C_NEXT  &trans &trans  &trans  &kp DEL
// ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤      ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤
    &kp GRAVE &kp EXCL  &kp AT    &kp HASH  &kp DLLR  &kp PRCNT         &kp CARET &kp AMPS  &kp ASTRK &kp LPAR  &kp RPAR  &kp TILDE
// ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤      ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤
    &bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2  &soft_off &trans   &trans   &kp UNDER &kp PLUS  &kp LBRC  &kp RBRC  &kp PIPE     
// └─────────┴─────────┴─────────┼─────────┼─────────┼─────────┤      ├─────────┼─────────┼─────────┼─────────┴─────────┴─────────┘
                                  &kp LGUI     &trans  &kp SPACE        &kp RET  &trans   &kp RALT
//                               └─────────┴─────────┴─────────┘      └─────────┴─────────┴─────────┘
            >;
        };

        // ----------------------------------------------------------------
        // Layer 2: RAISE (Symbols + F-keys on left side)
        // F1-F5 on home row (A-G), F6-F10 on bottom row (Z-B), F11-F12 on thumbs
        // ----------------------------------------------------------------
        raise_layer {
            bindings = <
// ┌─────────┬─────────┬─────────┬─────────┬─────────┬─────────┐          ┌─────────┬─────────┬─────────┬─────────┬─────────┬─────────┐
    &kp GRAVE &kp N1    &kp N2    &kp N3    &kp N4    &kp N5             &kp N6    &kp N7    &kp N8    &kp N9    &kp N0    &kp DEL
// ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤      ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤
    &kp F1    &kp F2    &kp F3    &kp F4    &kp F5     &kp F6            &kp LEFT  &kp DOWN  &kp UP   &kp RIGHT &trans    &trans
// ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤      ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤
    &kp F7    &kp F8    &kp F9    &kp F10    &kp F11    &kp F12        &kp PLUS  &kp MINUS &kp EQUAL &kp LBKT  &kp RBKT  &kp BSLH
// └─────────┴─────────┴─────────┼─────────┼─────────┼─────────┤          ├─────────┼─────────┼─────────┼─────────┴─────────┴─────────┘
                                  &kp LGUI     &trans  &kp SPACE              &kp RET  &trans   &kp RALT
//                               └─────────┴─────────┴─────────┘          └─────────┴─────────┴─────────┘
            >;
        };

        // ----------------------------------------------------------------
        // Layer 3: AUTO-SHIFT LAYER (activated by F+J combo)
        // All letters are UPPERCASE - just tap them normally
        // Any non-letter key deactivates the layer and returns to base
        // ----------------------------------------------------------------
        autoshift_layer {
            bindings = <
// ┌─────────┬─────────┬─────────┬─────────┬─────────┬─────────┐      ┌─────────┬─────────┬─────────┬─────────┬─────────┬─────────┐
    &to 0     &kp LS(Q) &kp LS(W) &kp LS(E) &kp LS(R) &kp LS(T)          &kp LS(Y) &kp LS(U) &kp LS(I) &kp LS(O) &kp LS(P) &to 0
// ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤      ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤
    &to 0     &kp LS(A) &kp LS(S) &kp LS(D) &kp LS(F) &kp LS(G)          &kp LS(H) &kp LS(J) &kp LS(K) &kp LS(L) &kp LS(SEMI) &to 0
// ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤      ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤
    &to 0     &kp LS(Z) &kp LS(X) &kp LS(C) &kp LS(V) &kp LS(B)          &kp LS(N) &kp LS(M) &to 0     &to 0     &to 0     &to 0
// └─────────┴─────────┴─────────┼─────────┼─────────┼─────────┤      ├─────────┼─────────┼─────────┼─────────┴─────────┴─────────┘
                                  &to 0     &to 0     &exit_as_space     &to 0     &to 0     &to 0
//                               └─────────┴─────────┴─────────┘      └─────────┴─────────┴─────────┘
            >;
        };
    };
};
